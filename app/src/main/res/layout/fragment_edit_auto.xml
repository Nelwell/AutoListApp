<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D4D5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AutoAddEditFragment">

    <EditText
        android:id="@+id/year_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/year_edittext"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/make_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/make_edittext"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/model_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/model_edittext"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/notes_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/notes_edittext"
        android:inputType="textMultiLine" />

    <ImageButton
        android:id="@+id/auto_image_button"
        android:layout_width="205dp"
        android:layout_height="173dp"
        android:backgroundTint="#7DA0C9"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/finished_button"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#717796"
        android:text="@string/finished_button"
        android:textColor="#E4FFFFFF" />

</LinearLayout>